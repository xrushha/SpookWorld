<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThoughtDef>
    <defName>SW_SpookyStoryGood</defName>
    <showBubble>true</showBubble>
    <thoughtClass>Thought_MemorySocial</thoughtClass>
    <durationDays>2</durationDays>
    <stackLimit>300</stackLimit>
    <stackLimitForSameOtherPawn>10</stackLimitForSameOtherPawn>
    <stackedEffectMultiplier>0.9</stackedEffectMultiplier>
    <developmentalStageFilter>Baby, Child, Adult</developmentalStageFilter>
    <socialTargetDevelopmentalStageFilter>Baby, Child, Adult</socialTargetDevelopmentalStageFilter>
    <stages>
      <li>
        <label>good spooky story</label>
        <baseOpinionOffset>3</baseOpinionOffset>
      </li>
    </stages>
    <thoughtToMake>SW_SpookyStoryMoodGood</thoughtToMake>
  </ThoughtDef>

  <ThoughtDef>
    <defName>SW_SpookyStoryMoodGood</defName>
    <durationDays>1</durationDays>
    <stackLimit>10</stackLimit>
    <stackedEffectMultiplier>0.9</stackedEffectMultiplier>
    <developmentalStageFilter>Baby, Child, Adult</developmentalStageFilter>
    <stages>
      <li>
        <label>spooky story</label>
        <description>I've been told a fascinating story! Spooky!</description>
        <baseMoodEffect>3</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
  <ThoughtDef>
    <defName>SW_SpookyStoryBad</defName>
    <showBubble>true</showBubble>
    <thoughtClass>Thought_MemorySocial</thoughtClass>
    <durationDays>2</durationDays>
    <stackLimit>300</stackLimit>
    <stackLimitForSameOtherPawn>10</stackLimitForSameOtherPawn>
    <stackedEffectMultiplier>0.9</stackedEffectMultiplier>
    <developmentalStageFilter>Baby, Child, Adult</developmentalStageFilter>
    <socialTargetDevelopmentalStageFilter>Baby, Child, Adult</socialTargetDevelopmentalStageFilter>
    <stages>
      <li>
        <label>boring spooky story</label>
        <baseOpinionOffset>-3</baseOpinionOffset>
      </li>
    </stages>
    <thoughtToMake>SW_SpookyStoryMoodBad</thoughtToMake>
  </ThoughtDef>

  <ThoughtDef>
    <defName>SW_SpookyStoryMoodBad</defName>
    <durationDays>1</durationDays>
    <stackLimit>10</stackLimit>
    <stackedEffectMultiplier>0.9</stackedEffectMultiplier>
    <developmentalStageFilter>Baby, Child, Adult</developmentalStageFilter>
    <stages>
      <li>
        <label>spooky story</label>
        <description>I've been told a boring spooky story. Meh.</description>
        <baseMoodEffect>-3</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
</Defs>
