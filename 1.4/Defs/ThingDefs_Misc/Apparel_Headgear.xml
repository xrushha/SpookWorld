<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
  <ThingDef ParentName="HatMakeableBase">
    <defName>SW_Apparel_WitchHat</defName>
    <label>witch hat</label>
    <description>Rugged yet stylish, this hat is worthy of a witch or a wizard.</description>
    <possessionCount>1</possessionCount>
    <recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Pawn/Apparel/WitchHat/WitchHat</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(0.9, 0.9)</drawSize>
    </graphicData>
    <costStuffCount>35</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <statBases>
      <MaxHitPoints>80</MaxHitPoints>
      <WorkToMake>1800</WorkToMake>
      <Mass>0.24</Mass>
      <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.15</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.45</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>0.8</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <SocialImpact>0.10</SocialImpact>
      <SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.05</SlaveSuppressionOffset>
    </equippedStatOffsets>
    <apparel>
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <developmentalStageFilter>Child, Adult</developmentalStageFilter>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Apparel/WitchHat/WitchHat</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>Spooky</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>(0.9,0.54,0.15,1)</only>
        </li>
        <li>
          <weight>15</weight>
          <only>(0.9,0.6,0.18,1)</only>
        </li>
        <li>
          <weight>20</weight>
          <only>(0.9,0.42,0.23,1)</only>
        </li>
      </options>
    </colorGenerator>
    <tradeTags>
      <li>BasicClothing</li>
    </tradeTags>
  </ThingDef>

  <ThingDef ParentName="HatMakeableBase">
    <defName>SW_Apparel_SkullMask</defName>
    <label>skull mask</label>
    <description>A spooky mask made from a skull. Provides little to no protection.</description>
    <techLevel>Neolithic</techLevel>
    <graphicData>
      <texPath>Things/Pawn/Apparel/SkullMask/SkullMask</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.80</drawSize>
    </graphicData>
    <uiIconScale>1.15</uiIconScale>
    <costList>
	    <Steel>25</Steel>
	</costList>
    <statBases>
      <WorkToMake>2500</WorkToMake>
      <MaxHitPoints>80</MaxHitPoints>
      <ArmorRating_Sharp>0.1</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.05</ArmorRating_Blunt>
      <ArmorRating_Heat>0</ArmorRating_Heat>
      <Mass>1.2</Mass>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
    <apparel>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Apparel/SkullMask/SkullMask</wornGraphicPath>
      <hatRenderedFrontOfFace>true</hatRenderedFrontOfFace>
      <layers> 
        <li>Overhead</li>
      </layers>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
    <recipeMaker>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Sculpt</effectWorking>
      <soundWorking>Recipe_Sculpt</soundWorking>
      <recipeUsers>
        <li>HandTailoringBench</li>
		<li>ElectricTailoringBench</li>
      </recipeUsers>
      <unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
	  <researchPrerequisite>ComplexClothing</researchPrerequisite>
    </recipeMaker>
    <tradeTags>
      <li>BasicClothing</li>
    </tradeTags>
  </ThingDef>
  
